<h2>Add a new Student</h2>
<form method="POST" class="addStu" autocomplete="off">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Name : </label>
      <input type="text" name="name" required class="form-control" id="exampleInputEmail1">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">id. : </label>
        <input type="number" name="id" required class="form-control" id="exampleInputEmail1" >
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">tel : </label>
        <input type="number" name="tel" required class="form-control" id="exampleInputEmail1" >
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">address : </label>
        <input type="text" name="address" required class="form-control" id="exampleInputEmail1" >
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">food : </label>
        <input type="text" name="food" required class="form-control" id="exampleInputEmail1">
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">grade : </label>
        <input type="number" name="grade" required class="form-control" id="exampleInputEmail1">
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">nation : </label>
        <input type="text" name="nation" required class="form-control" id="exampleInputEmail1">
      </div>
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Status (pass/fail) : </label>
        <input type="text" name="status" required class="form-control" id="exampleInputEmail1">
      </div>
    <button type="submit" class="btn btn-success">Add</button>
    <a href="/teacher/viewall" class="btn btn-primary">View All</a>
</form>